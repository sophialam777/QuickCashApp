<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="410dp"
        android:layout_height="0dp"
        android:background="#D9D9D9"
        android:gravity="center"
        android:text="Search Result"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-3dp" />

    <TextView
        android:id="@+id/job_result_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="612dp"
        android:text="Result 1"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_job_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/view_job_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="81dp"
        android:backgroundTint="#A76DFF"
        android:padding="8dp"
        android:text="View Job"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/job_result_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/view_map_button"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="1dp"
        android:text="View Jobs on Map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_map_button2"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="1dp"
        android:text="Go Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>