<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_cash"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:shadowColor="@android:color/black"
            android:layout_marginBottom="30dp"/>

        <!-- Create Account Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingTop="10dp"
            android:layout_marginBottom="30dp"/>

        <!-- Input Fields -->

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:hint="Name"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:hint="Contact Number"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:hint="Password (Must be 8 characters)"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <!-- Role Dropdown (Spinner) -->
        <Spinner
            android:id="@+id/spinner_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select your role"
            android:background="@drawable/input_field"
            android:padding="16dp"
            android:layout_marginBottom="20dp"/>

        <!-- Create Account Button -->
        <Button
            android:id="@+id/btn_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textStyle="bold"
            android:hint="Register"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:paddingTop="20dp"
            android:textSize="20sp"
            android:layout_marginTop="60dp" />

        <!-- Terms and Conditions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_creating_an_account_or_signing_you_agree_to_our_terms_and_conditions"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

        <!-- Error Message (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/error_red"
                android:layout_marginEnd="5dp"/>


            <TextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invalid_details_please_re_enter_your_information"
                android:textSize="14sp"
                android:textColor="@color/error_red"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
