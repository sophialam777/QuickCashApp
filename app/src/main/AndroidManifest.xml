<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <!-- Add INTERNET permission for network access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Iteration1"
        tools:targetApi="31" >
        <!-- MainActivity - The entry point of the app -->
        <activity
            android:name=".Login"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registration Activity - It should be exported -->
        <activity
            android:name=".Registration"
            android:exported="true" />
        <activity
            android:name=".ForgotPassword"
            android:exported="true" />
        <activity
            android:name=".homepage"
            android:exported="true" />
        <activity
            android:name=".MyAccount"
            android:exported="true" />

        <activity
            android:name=".JobListingsActivity"
            android:exported="true" />

        <activity
            android:name=".JobDetailsActivity"
            android:exported="true" />
    </application>

</manifest>
